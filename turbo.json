{
    "$schema": "https://turborepo.dev/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "format": {},

        "check": {
            "dependsOn": ["format"]
        },

        "lint": {
            "dependsOn": ["format"],
            "cache": false
        },
        "core#lint": {
            "dependsOn": ["core#check"]
        },
        "web#lint": {
            "dependsOn": ["web#check"]
        },

        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}